<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AUiJukebox.Appearance.KTV">
        <item name="aui_jukebox_background">@drawable/ktv_dialog_bg</item>
        <item name="aui_jukebox_titleTabMode">scrollable</item>
        <item name="aui_jukebox_titleTabGravity">start</item>
        <item name="aui_jukebox_titleTabSelectedTextColor">@android:color/white</item>
        <item name="aui_jukebox_titleTabTextColor">#88ffffff</item>

        <item name="aui_jukebox_titleTabIndicator">@null</item>
        <item name="aui_jukebox_titleTabDivider">@null</item>

    </style>

    <style name="AUiJukeboxChoose.Appearance.KTV">
        <!-- 搜索输入框 -->
        <item name="aui_jukeboxChoose_searchBackground">@drawable/ktv_jukebox_search_bg</item>
        <item name="aui_jukeboxChoose_searchHintTextColor">#88ffffff</item>
        <item name="aui_jukeboxChoose_searchTextColor">@android:color/white</item>
        <item name="aui_jukeboxChoose_searchIcon">@drawable/ktv_ic_search</item>

        <!-- 分类Tab -->
        <item name="aui_jukeboxChoose_categoryTabGravity">start</item>
        <item name="aui_jukeboxChoose_categoryTabDivider">@null</item>
        <item name="aui_jukeboxChoose_categoryTabTextColor">#88ffffff</item>
        <item name="aui_jukeboxChoose_categoryTabSelectedTextColor">@android:color/white</item>

        <item name="aui_jukeboxChoose_listDivider">@drawable/ktv_jukebox_divider</item>
    </style>

    <style name="AUiJukeboxChooseItem.Appearance.KTV">

        <item name="aui_jukeboxChooseItem_coverDefaultImg">@drawable/ktv_ic_song_default</item>
        <item name="aui_jukeboxChooseItem_songNameTextColor">@android:color/white</item>
        <item name="aui_jukeboxChooseItem_singerNameTextColor">#88ffffff</item>

        <item name="aui_jukeboxChooseItem_buttonBackground">@drawable/ktv_jukebox_choose_song_btn</item>
        <item name="aui_jukeboxChooseItem_buttonTextColor">@android:color/white</item>

    </style>

    <style name="AUiJukeboxChosen.Appearance.KTV">
        <item name="aui_jukeboxChosen_listDivider">@drawable/ktv_jukebox_chosen_divider</item>
    </style>

    <style name="AUiJukeboxChosenItem.Appearance.KTV">
        <item name="aui_jukeboxChosenItem_paddingHorizontal">0dp</item>
        <item name="aui_jukeboxChosenItem_coverDefaultImg">@drawable/ktv_ic_song_default</item>
        <item name="aui_jukeboxChosenItem_songNameTextColor">@android:color/white</item>
        <item name="aui_jukeboxChosenItem_singerTextColor">#88ffffff</item>
        <item name="aui_jukeboxChosenItem_playingTagLocation">aboveOrder</item>
        <item name="aui_jukeboxChosenItem_playingTagSrc">@drawable/ktv_singing_icon</item>
        <item name="aui_jukeboxChosenItem_playingBtnText">@string/aui_jukebox_song_playing</item>
        <item name="aui_jukeboxChosenItem_playingBtnBackground">@null</item>
        <item name="aui_jukeboxChosenItem_deleteBtnBackground">@drawable/ktv_ic_to_del</item>
        <item name="aui_jukeboxChosenItem_topBtnBackground">@drawable/ktv_ic_to_top</item>
        <item name="aui_jukeboxChosenItem_topBtnMarginEnd">20dp</item>
    </style>


</resources>