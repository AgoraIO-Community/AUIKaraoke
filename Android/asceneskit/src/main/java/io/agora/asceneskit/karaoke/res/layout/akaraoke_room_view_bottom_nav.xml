<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="18dp"
    android:paddingVertical="8dp"
    android:layout_gravity="bottom">

    <io.agora.auikit.ui.basic.AUiButton
        android:id="@+id/btnMessage"
        style="@style/AUiButton.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:aui_button_backgroundNormalColor="?attr/akaraoke_roomButton_normalColor"
        app:aui_button_drawableCenter="@mipmap/ic_nav_msg"
        app:aui_button_drawableTint="@android:color/white" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <io.agora.auikit.ui.basic.AUiButton
        android:id="@+id/btnMic"
        style="@style/AUiButton.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:aui_button_backgroundNormalColor="?attr/akaraoke_roomButton_normalColor"
        app:aui_button_drawableCenter="@mipmap/ic_nav_mic_on"
        android:layout_marginEnd="16dp"
        app:aui_button_drawableTint="@android:color/white" />

    <io.agora.auikit.ui.basic.AUiButton
        android:id="@+id/btnGift"
        style="@style/AUiButton.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:aui_button_backgroundNormalColor="?attr/akaraoke_roomButton_normalColor"
        app:aui_button_drawableCenter="@mipmap/ic_nav_gift"
        app:aui_button_drawableTint="@android:color/white" />

</LinearLayout>