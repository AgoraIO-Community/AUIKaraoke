<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="aui_editText_appearance" format="reference"/>
    <attr name="aui_editText_appearance_outline" format="reference"/>

    <declare-styleable name="AUiEditText">

        <!-- 小标题 -->
        <attr name="aui_edittext_title_text" format="string" />
        <attr name="aui_edittext_title_textColor" format="color" />
        <attr name="aui_edittext_title_textSize" format="dimension" />
        <attr name="aui_edittext_title_padding" format="dimension" />
        <attr name="aui_edittext_title_paddingStart" format="dimension" />
        <attr name="aui_edittext_title_paddingTop" format="dimension" />
        <attr name="aui_edittext_title_paddingEnd" format="dimension" />
        <attr name="aui_edittext_title_paddingBottom" format="dimension" />

        <!-- 提示信息 -->
        <attr name="aui_edittext_tip_text" format="string" />
        <attr name="aui_edittext_tip_textColor" format="color" />
        <attr name="aui_edittext_tip_textErrorColor" format="color" />
        <attr name="aui_edittext_tip_textSize" format="dimension" />
        <attr name="aui_edittext_tip_padding" format="dimension" />
        <attr name="aui_edittext_tip_paddingStart" format="dimension" />
        <attr name="aui_edittext_tip_paddingTop" format="dimension" />
        <attr name="aui_edittext_tip_paddingEnd" format="dimension" />
        <attr name="aui_edittext_tip_paddingBottom" format="dimension" />

        <!-- 输入框字体 -->
        <attr name="aui_edittext_input_text" format="string" />
        <attr name="aui_edittext_input_textColor" format="color" />
        <attr name="aui_edittext_input_textSize" format="dimension" />
        <attr name="aui_edittext_input_hintText" format="string" />
        <attr name="aui_edittext_input_hintTextColor" format="color" />

        <!-- 输入框间距 -->
        <attr name="aui_edittext_input_padding" format="dimension" />
        <attr name="aui_edittext_input_paddingStart" format="dimension" />
        <attr name="aui_edittext_input_paddingTop" format="dimension" />
        <attr name="aui_edittext_input_paddingEnd" format="dimension" />
        <attr name="aui_edittext_input_paddingBottom" format="dimension" />

        <!-- 输入框背景 -->
        <attr name="aui_edittext_input_backgroundType">
            <enum name="box" value="0x01" />
            <enum name="line" value="0x02" />
        </attr>
        <attr name="aui_edittext_input_backgroundColor" format="reference|color" />
        <attr name="aui_edittext_input_backgroundHighlightWidth" format="dimension" />
        <attr name="aui_edittext_input_backgroundHighlightColor" format="reference|color" />
        <attr name="aui_edittext_input_backgroundErrorColor" format="reference|color" />
        <attr name="aui_edittext_input_backgroundErrorHighlightColor" format="reference|color" />
        <attr name="aui_edittext_input_backgroundBoxRadius" format="dimension" />

        <!-- 输入框输入类型，文本/密码/手机号 -->
        <attr name="aui_edittext_input_type">
            <enum name="text" value="0x01" />
            <enum name="password" value="0x02" />
            <enum name="phone" value="0x03" />
        </attr>
        <attr name="aui_edittext_input_passwordEyeSrc" format="reference" />
        <attr name="aui_edittext_input_passwordEyeWidth" format="dimension" >
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="aui_edittext_input_passwordEyeHeight" format="dimension" >
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="aui_edittext_input_phoneAreaText" format="string" />
        <attr name="aui_edittext_input_phoneAreaTextSize" format="dimension" />
        <attr name="aui_edittext_input_phoneAreaTextColor" format="color" />
        <attr name="aui_edittext_input_phoneAreaLineColor" format="color" />
        <attr name="aui_edittext_input_phoneAreaLineWidth" format="dimension" />
        <attr name="aui_edittext_input_phoneAreaLineInsertLeft" format="dimension" />
        <attr name="aui_edittext_input_phoneAreaLineInsertRight" format="dimension" />
        <attr name="aui_edittext_input_phoneAreaLineInsertTop" format="dimension" />
        <attr name="aui_edittext_input_phoneAreaLineInsertBottom" format="dimension" />

        <!-- 状态 -->
        <attr name="aui_edittext_status">
            <enum name="normal" value="0x01" />
            <enum name="error" value="0x02" />
        </attr>

        <!-- 输入配置 -->
        <attr name="aui_edittext_input_lineNum" format="integer" />
        <attr name="aui_edittext_input_maxCount" format="integer" />


        <!-- 左右图标 -->
        <attr name="aui_edittext_icon_left" format="reference" />
        <attr name="aui_edittext_icon_left_tint" format="reference" />
        <attr name="aui_edittext_icon_right" format="reference" />
        <attr name="aui_edittext_icon_right_tint" format="reference" />
    </declare-styleable>

    <style name="AUiEditText">

        <!-- 状态 -->
        <item name="aui_edittext_status">normal</item>

        <!-- 小标题 -->
        <item name="aui_edittext_title_textColor">@color/aui_black</item>
        <item name="aui_edittext_title_textSize">13sp</item>
        <item name="aui_edittext_title_padding">@null</item>
        <item name="aui_edittext_title_paddingStart">0dp</item>
        <item name="aui_edittext_title_paddingEnd">0dp</item>
        <item name="aui_edittext_title_paddingBottom">6dp</item>
        <item name="aui_edittext_title_paddingTop">6dp</item>

        <!-- 输入框字体 -->
        <item name="aui_edittext_input_textColor">@color/aui_black</item>
        <item name="aui_edittext_input_textSize">16sp</item>
        <item name="aui_edittext_input_hintTextColor">@color/aui_grey</item>

        <!-- 输入框内间距 -->
        <item name="aui_edittext_input_padding">@null</item>
        <item name="aui_edittext_input_paddingStart">18dp</item>
        <item name="aui_edittext_input_paddingEnd">18dp</item>
        <item name="aui_edittext_input_paddingTop">12dp</item>
        <item name="aui_edittext_input_paddingBottom">12dp</item>

        <!-- 输入框背景 -->
        <item name="aui_edittext_input_backgroundType">box</item>
        <item name="aui_edittext_input_backgroundColor">@color/aui_grey_light</item>
        <item name="aui_edittext_input_backgroundHighlightColor">@color/aui_blue</item>
        <item name="aui_edittext_input_backgroundErrorColor">@color/aui_danger_light</item>
        <item name="aui_edittext_input_backgroundHighlightWidth">1dp</item>
        <item name="aui_edittext_input_backgroundErrorHighlightColor">@color/aui_danger</item>
        <item name="aui_edittext_input_backgroundBoxRadius">999dp</item>

        <!-- 输入框输入类型，文本/密码/手机号 -->
        <item name="aui_edittext_input_type">text</item>
        <item name="aui_edittext_input_passwordEyeSrc">@drawable/aui_ic_password_eye</item>
        <item name="aui_edittext_input_passwordEyeWidth">30dp</item>
        <item name="aui_edittext_input_passwordEyeHeight">30dp</item>
        <item name="aui_edittext_input_phoneAreaText">+86</item>
        <item name="aui_edittext_input_phoneAreaTextSize">16sp</item>
        <item name="aui_edittext_input_phoneAreaTextColor">@color/aui_black</item>

        <item name="aui_edittext_input_phoneAreaLineColor">@color/aui_grey</item>
        <item name="aui_edittext_input_phoneAreaLineWidth">1.5dp</item>
        <item name="aui_edittext_input_phoneAreaLineInsertLeft">12dp</item>
        <item name="aui_edittext_input_phoneAreaLineInsertRight">12dp</item>
        <item name="aui_edittext_input_phoneAreaLineInsertTop">12dp</item>
        <item name="aui_edittext_input_phoneAreaLineInsertBottom">12dp</item>

        <!-- 提示信息 -->
        <item name="aui_edittext_tip_textColor">@color/aui_grey</item>
        <item name="aui_edittext_tip_textErrorColor">@color/aui_danger</item>
        <item name="aui_edittext_tip_textSize">13sp</item>
        <item name="aui_edittext_tip_padding">@null</item>
        <item name="aui_edittext_tip_paddingStart">0dp</item>
        <item name="aui_edittext_tip_paddingEnd">0dp</item>
        <item name="aui_edittext_tip_paddingBottom">6dp</item>
        <item name="aui_edittext_tip_paddingTop">6dp</item>

        <!-- 输入配置 -->
        <item name="aui_edittext_input_lineNum">1</item>

    </style>

    <style name="AUiEditText.OutLine">
        <item name="aui_edittext_title_paddingBottom">0dp</item>
        <item name="aui_edittext_input_backgroundType">line</item>
        <item name="aui_edittext_input_paddingStart">6dp</item>
        <item name="aui_edittext_input_paddingEnd">6dp</item>
        <item name="aui_edittext_input_paddingBottom">6dp</item>
        <item name="aui_edittext_input_paddingTop">6dp</item>
        <item name="aui_edittext_input_phoneAreaLineInsertTop">6dp</item>
        <item name="aui_edittext_input_phoneAreaLineInsertBottom">6dp</item>
    </style>



</resources>