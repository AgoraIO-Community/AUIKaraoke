<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AUIMicSeats">
        <item name="aui_micSeats_appearance">@style/AUIMicSeats.Appearance</item>
    </style>
    <style name="AUIMicSeatItem">
        <item name="aui_micSeatItem_appearance">@style/AUIMicSeatItem.Appearance</item>
    </style>
    <style name="AUIMicSeatDialog">
        <item name="aui_micSeatDialog_appearance">@style/AUIMicSeatDialog.Appearance</item>
    </style>

    <!-- 麦位默认样式 -->
    <style name="AUIMicSeats.Appearance">
        <item name="aui_micSeats_spaceHorizontal">2dp</item>
        <item name="aui_micSeats_spaceVertical">2dp</item>
        <item name="aui_micSeats_background">@android:color/transparent</item>
    </style>

    <!-- 麦位座位默认样式 -->
    <style name="AUIMicSeatItem.Appearance">
        <!-- 麦位全局 -->
        <item name="aui_micSeatItem_background">@android:color/transparent</item>
        <item name="aui_micSeatItem_dimensionRatio">1:1</item>

        <!-- 麦位座位 -->
        <item name="aui_micSeatItem_seatBackground">@drawable/aui_micseat_item_seat_bg</item>
        <item name="aui_micSeatItem_seatIconIdle">@drawable/aui_micseat_item_icon_idle</item>
        <item name="aui_micSeatItem_seatIconLock">@drawable/aui_micseat_item_icon_lock</item>
        <item name="aui_micSeatItem_seatIconMargin">20dp</item>
        <item name="aui_micSeatItem_seatIconDimensionRatio">1:1</item>

        <!-- 麦位静音图标 -->
        <item name="aui_micSeatItem_audioMuteIcon">@drawable/aui_micseat_item_icon_auido_mute</item>
        <item name="aui_micSeatItem_videoMuteIcon">@drawable/aui_micseat_item_icon_video_mute</item>
        <item name="aui_micSeatItem_audioMuteIconWidth">wrap_content</item>
        <item name="aui_micSeatItem_audioMuteIconHeight">wrap_content</item>
        <item name="aui_micSeatItem_audioMuteIconGravity">bottomEnd</item>

        <!-- 麦位房主 -->
        <item name="aui_micSeatItem_roomOwnerWidth">44dp</item>
        <item name="aui_micSeatItem_roomOwnerHeight">wrap_content</item>
        <item name="aui_micSeatItem_roomOwnerText">@string/aui_micseat_roomowner</item>
        <item name="aui_micSeatItem_roomOwnerTextSize">11sp</item>
        <item name="aui_micSeatItem_roomOwnerTextColor">@android:color/white</item>
        <item name="aui_micSeatItem_roomOwnerBackground">@drawable/aui_micseat_item_roomowner_bg</item>
        <item name="aui_micSeatItem_roomOwnerPaddingHorizontal">4dp</item>
        <item name="aui_micSeatItem_roomOwnerPaddingVertical">2dp</item>

        <!-- 麦位主标题 -->
        <item name="aui_micSeatItem_titleIdleText">@string/aui_micseat_item_title_idle</item>
        <item name="aui_micSeatItem_titleTextSize">12sp</item>
        <item name="aui_micSeatItem_titleTextColor">@android:color/white</item>

        <!-- 麦位合唱 -->
        <item name="aui_micSeatItem_chorusIcon">@drawable/aui_micseat_item_icon_chorus</item>
        <item name="aui_micSeatItem_chorusText">@string/aui_micseat_chorus</item>
        <item name="aui_micSeatItem_chorusTextColor">@android:color/white</item>
        <item name="aui_micSeatItem_chorusTextSize">11sp</item>

        <!-- 麦位主唱 -->
        <item name="aui_micSeatItem_leadSingerIcon">@drawable/aui_micseat_item_icon_leadsinger</item>
        <item name="aui_micSeatItem_leadSingerText">@string/aui_micseat_leadsinger</item>
        <item name="aui_micSeatItem_leadSingerTextColor">@android:color/white</item>
        <item name="aui_micSeatItem_leadSingerTextSize">11sp</item>
    </style>

    <!-- 麦位弹窗默认样式 -->
    <style name="AUIMicSeatDialog.Appearance">

        <item name="aui_micSeatDialog_background">@drawable/aui_bg_bottom_dialog</item>
        <item name="aui_micSeatDialog_marginTop">0dp</item>
        <item name="aui_micSeatDialog_padding">20dp</item>

        <!-- 标题 -->
        <item name="aui_micSeatDialog_titleVisibility">visible</item>
        <item name="aui_micSeatDialog_titleText">@string/aui_micseat_dialog_title</item>
        <item name="aui_micSeatDialog_titleTextSize">18sp</item>
        <item name="aui_micSeatDialog_titleTextColor">@android:color/white</item>

        <!-- 用户头像 -->
        <item name="aui_micSeatDialog_userAvatarIdle">@drawable/aui_micseat_dialog_avatar_idle</item>
        <item name="aui_micSeatDialog_userAvatarWidth">60dp</item>
        <item name="aui_micSeatDialog_userAvatarHeight">60dp</item>

        <!-- 用户名 -->
        <item name="aui_micSeatDialog_userNameTextSize">13sp</item>
        <item name="aui_micSeatDialog_userNameTextColor">@android:color/white</item>
        <item name="aui_micSeatDialog_userNameMarginTop">0dp</item>

        <!-- 用户描述 -->
        <item name="aui_micSeatDialog_userDesTextSize">12sp</item>
        <item name="aui_micSeatDialog_userDesTextColor">@android:color/darker_gray</item>
        <item name="aui_micSeatDialog_userDesText">@string/aui_micseat_item_title_idle</item>
        <item name="aui_micSeatDialog_userDesVisible">visible</item>

        <!-- 操作按钮 -->
        <item name="aui_micSeatDialog_buttonsOrientation">vertical</item>
        <item name="aui_micSeatDialog_buttonsDivider">@drawable/aui_micseat_dialog_btn_divider</item>
        <item name="aui_micSeatDialog_buttonsDividerPadding">0dp</item>
        <item name="aui_micSeatDialog_buttonsMarginTop">10dp</item>
        <item name="aui_micSeatDialog_buttonsMarginBottom">20dp</item>
        <item name="aui_micSeatDialog_buttonBackground">@null</item>
        <item name="aui_micSeatDialog_buttonTextSize">16sp</item>
        <item name="aui_micSeatDialog_buttonNormalTextColor">@android:color/white</item>
        <item name="aui_micSeatDialog_buttonAbandonTextColor">@android:color/holo_red_light</item>
        <item name="aui_micSeatDialog_buttonPaddingHorizontal">25dp</item>
        <item name="aui_micSeatDialog_buttonPaddingVertical">8dp</item>
        <item name="aui_micSeatDialog_buttonMarginHorizontal">0dp</item>
        <item name="aui_micSeatDialog_buttonMarginVertical">0dp</item>

    </style>

</resources>