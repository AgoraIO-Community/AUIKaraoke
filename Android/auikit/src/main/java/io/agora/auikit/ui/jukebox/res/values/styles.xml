<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AUiJukebox">
        <item name="aui_jukebox_appearance">@style/AUiJukebox.Appearance</item>
    </style>
    <style name="AUiJukeboxChoose">
        <item name="aui_jukeboxChoose_appearance">@style/AUiJukeboxChoose.Appearance</item>
    </style>
    <style name="AUiJukeboxChosen">
        <item name="aui_jukeboxChosen_appearance">@style/AUiJukeboxChosen.Appearance</item>
    </style>
    <style name="AUiJukeboxChooseItem">
        <item name="aui_jukeboxChooseItem_appearance">@style/AUiJukeboxChooseItem.Appearance</item>
    </style>
    <style name="AUiJukeboxChosenItem">
        <item name="aui_jukeboxChosenItem_appearance">@style/AUiJukeboxChosenItem.Appearance</item>
    </style>


    <style name="AUiJukebox.Appearance">

        <!-- 背景 -->
        <item name="aui_jukebox_background">@drawable/aui_bg_bottom_dialog</item>
        <!-- 最小高度 -->
        <item name="aui_jukebox_minHeight">600dp</item>
        <item name="aui_jukebox_paddingTop">34dp</item>

        <!-- 标题tab -->
        <item name="aui_jukebox_tab_layout_background">@drawable/aui_jukebox_tab_layout_bg</item>
        <item name="aui_jukebox_tab_background">@drawable/aui_jukebox_tab_bg</item>
        <item name="aui_jukebox_titleTabChooseText">@string/aui_jukebox_title_choose_song</item>
        <item name="aui_jukebox_titleTabChosenText">@string/aui_jukebox_title_chosen_song</item>
        <item name="aui_jukebox_titleTabMode">scrollable</item>
        <item name="aui_jukebox_titleTabGravity">fill</item>
        <item name="aui_jukebox_titleTabTextSize">14sp</item>
        <item name="aui_jukebox_titleTabSelectedTextColor">@android:color/white</item>
        <item name="aui_jukebox_titleTabTextColor">@android:color/white</item>
        <item name="aui_jukebox_titleTabIndicator">@null</item>
        <item name="aui_jukebox_titleTabDivider">@android:color/transparent</item>

        <!-- 标题数量标签tag -->
        <item name="aui_jukebox_numTagWidth">18dp</item>
        <item name="aui_jukebox_numTagHeight">18dp</item>
        <item name="aui_jukebox_numTagBackground">@null</item>
        <item name="aui_jukebox_numTagTextColor">@android:color/white</item>
        <item name="aui_jukebox_numTagTextSize">14sp</item>

    </style>

    <style name="AUiJukeboxChoose.Appearance">

        <!-- 搜索输入框 -->
        <item name="aui_jukeboxChoose_searchBackground">@drawable/aui_jukebox_search_bg</item>
        <item name="aui_jukeboxChoose_searchPaddingHorizontal">16dp</item>
        <item name="aui_jukeboxChoose_searchPaddingVertical">8dp</item>
        <item name="aui_jukeboxChoose_searchMarginHorizontal">16dp</item>
        <item name="aui_jukeboxChoose_searchMarginVertical">24dp</item>
        <item name="aui_jukeboxChoose_searchIcon">@drawable/aui_jukebox_choose_icon_search</item>
        <item name="aui_jukeboxChoose_searchCloseIcon">@drawable/aui_jukebox_choose_icon_close</item>
        <item name="aui_jukeboxChoose_searchHintText">@string/aui_jukebox_search_hint</item>
        <item name="aui_jukeboxChoose_searchHintTextColor">#59FFFFFF</item>
        <item name="aui_jukeboxChoose_searchTextSize">17sp</item>
        <item name="aui_jukeboxChoose_searchTextColor">@android:color/white</item>
        <item name="aui_jukeboxChoose_searchInputMarginHorizontal">4dp</item>

        <!-- 分类Tab -->
        <item name="aui_jukeboxChoose_categoryTabHeight">44dp</item>
        <item name="aui_jukeboxChoose_categoryTabMode">scrollable</item>
        <item name="aui_jukeboxChoose_categoryTabGravity">center</item>
        <item name="aui_jukeboxChoose_categoryTabIndicator">@drawable/aui_jukebox_tab_indicator</item>
        <item name="aui_jukeboxChoose_categoryTabTextSize">14sp</item>
        <item name="aui_jukeboxChoose_categoryTabTextColor">#80FFFFFF</item>
        <item name="aui_jukeboxChoose_categoryTabSelectedTextColor">#FFFFFF</item>
        <item name="aui_jukeboxChoose_categoryTabDivider">@drawable/aui_jukebox_divider</item>

        <!-- 列表分隔线 -->
        <item name="aui_jukeboxChoose_listDivider">@drawable/aui_jukebox_divider</item>
        <item name="aui_jukeboxChoose_listPaddingHorizontal">16dp</item>

    </style>

    <style name="AUiJukeboxChooseItem.Appearance">
        <item name="aui_jukeboxChooseItem_paddingHorizontal">0dp</item>
        <item name="aui_jukeboxChooseItem_paddingVertical">16dp</item>

        <!-- 歌词封面 -->
        <item name="aui_jukeboxChooseItem_coverWidth">56dp</item>
        <item name="aui_jukeboxChooseItem_coverHeight">56dp</item>
        <item name="aui_jukeboxChooseItem_coverCircleRadius">8dp</item>
        <item name="aui_jukeboxChooseItem_coverDefaultImg">@drawable/aui_jukebox_song_cover_default</item>

        <!-- 歌词名 -->
        <item name="aui_jukeboxChooseItem_songNameTextColor">#FFFFFF</item>
        <item name="aui_jukeboxChooseItem_songNameTextSize">17sp</item>
        <item name="aui_jukeboxChooseItem_songNameMarginStart">12dp</item>

        <!-- 歌手名 -->
        <item name="aui_jukeboxChooseItem_singerNameTextColor">#80FFFFFF</item>
        <item name="aui_jukeboxChooseItem_singerNameTextSize">12sp</item>
        <item name="aui_jukeboxChooseItem_singerNameMarginStart">12dp</item>

        <!-- 点歌/已点(no check / checked)按钮 -->
        <item name="aui_jukeboxChooseItem_buttonWidth">80dp</item>
        <item name="aui_jukeboxChooseItem_buttonHeight">38dp</item>
        <item name="aui_jukeboxChooseItem_buttonBackground">@drawable/aui_jukebox_choose_song_btn</item>
        <item name="aui_jukeboxChooseItem_buttonTextColor">@color/aui_jukebox_choose_song_text_color</item>
        <item name="aui_jukeboxChooseItem_buttonTextSize">14sp</item>
        <item name="aui_jukeboxChooseItem_buttonText">@string/aui_jukebox_song_choose</item>
        <item name="aui_jukeboxChooseItem_buttonCheckedText">@string/aui_jukebox_song_chosen</item>


    </style>

    <style name="AUiJukeboxChosen.Appearance">

        <!-- 列表分隔线 -->
        <item name="aui_jukeboxChosen_listDivider">@drawable/aui_jukebox_divider</item>
        <item name="aui_jukeboxChosen_listPaddingHorizontal">16dp</item>

    </style>

    <style name="AUiJukeboxChosenItem.Appearance">
        <item name="aui_jukeboxChosenItem_paddingHorizontal">0dp</item>
        <item name="aui_jukeboxChosenItem_paddingVertical">16dp</item>

        <!-- 标号 -->
        <item name="aui_jukeboxChosenItem_orderMinWidth">38dp</item>
        <item name="aui_jukeboxChosenItem_orderTextColor">@android:color/darker_gray</item>
        <item name="aui_jukeboxChosenItem_orderTextSize">13sp</item>

        <!-- 歌词封面 -->
        <item name="aui_jukeboxChosenItem_coverWidth">56dp</item>
        <item name="aui_jukeboxChosenItem_coverHeight">56dp</item>
        <item name="aui_jukeboxChosenItem_coverCircleRadius">8dp</item>
        <item name="aui_jukeboxChosenItem_coverDefaultImg">@drawable/aui_jukebox_song_cover_default</item>

        <!-- 歌词名 -->
        <item name="aui_jukeboxChosenItem_songNameTextColor">#FFFFFF</item>
        <item name="aui_jukeboxChosenItem_songNameTextSize">16sp</item>
        <item name="aui_jukeboxChosenItem_songNameMarginStart">12dp</item>

        <!-- 点唱/合唱者 -->
        <item name="aui_jukeboxChosenItem_singerTextColor">#80FFFFFF</item>
        <item name="aui_jukeboxChosenItem_singerTextSize">12sp</item>
        <item name="aui_jukeboxChosenItem_singerMarginStart">12dp</item>
        <item name="aui_jukeboxChosenItem_singerSoloText">@string/aui_jukebox_sing_solo</item>
        <item name="aui_jukeboxChosenItem_singerChorusText">@string/aui_jukebox_sing_chorus</item>

        <!-- 演唱中图标 -->
        <item name="aui_jukeboxChosenItem_playingTagSrc">@drawable/aui_jukebox_playing_tag_icon</item>
        <item name="aui_jukeboxChosenItem_playingTagPadding">0dp</item>
        <item name="aui_jukeboxChosenItem_playingTagWidth">wrap_content</item>
        <item name="aui_jukeboxChosenItem_playingTagHeight">wrap_content</item>
        <item name="aui_jukeboxChosenItem_playingTagLocation">aboveOrder</item>

        <!-- 演唱中按钮 -->
        <item name="aui_jukeboxChosenItem_playingBtnBackground">@drawable/aui_jukebox_playing_icon</item>
        <item name="aui_jukeboxChosenItem_playingBtnText">@null</item>
        <item name="aui_jukeboxChosenItem_playingBtnTextSize">14sp</item>
        <item name="aui_jukeboxChosenItem_playingBtnTextColor">#00A2F4</item>
        <item name="aui_jukeboxChosenItem_playingBtnWidth">wrap_content</item>
        <item name="aui_jukeboxChosenItem_playingBtnHeight">wrap_content</item>

        <!-- 删除按钮 -->
        <item name="aui_jukeboxChosenItem_deleteBtnBackground">@drawable/aui_jukebox_delete_icon</item>
        <item name="aui_jukeboxChosenItem_deleteBtnText">@null</item>
        <item name="aui_jukeboxChosenItem_deleteBtnTextSize">16sp</item>
        <item name="aui_jukeboxChosenItem_deleteBtnTextColor">#00A2F4</item>
        <item name="aui_jukeboxChosenItem_deleteBtnWidth">wrap_content</item>
        <item name="aui_jukeboxChosenItem_deleteBtnHeight">wrap_content</item>

        <!-- 置顶按钮 -->
        <item name="aui_jukeboxChosenItem_topBtnBackground">@drawable/aui_jukebox_top_icon</item>
        <item name="aui_jukeboxChosenItem_topBtnText">@null</item>
        <item name="aui_jukeboxChosenItem_topBtnTextSize">16sp</item>
        <item name="aui_jukeboxChosenItem_topBtnTextColor">#00A2F4</item>
        <item name="aui_jukeboxChosenItem_topBtnWidth">wrap_content</item>
        <item name="aui_jukeboxChosenItem_topBtnHeight">wrap_content</item>
        <item name="aui_jukeboxChosenItem_topBtnMarginEnd">10dp</item>

    </style>




</resources>